{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "Defaults",
            "description": "Default configuration",
            "binaryDir": "${sourceDir}/build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_EXTENSIONS": "OFF"
            },
            "generator": "Ninja"
        },
        {
            "name": "Debug",
            "hidden": true,
            "description": "Debug configuration",
            "binaryDir": "${sourceDir}/build/debug",
            "inherits": "Defaults"
        },
        {
            "name": "Release",
            "hidden": true,
            "description": "Release configuration",
            "binaryDir": "${sourceDir}/build/release",
            "inherits": "Defaults",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
				"CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
            }
        },
        {
            "name": "linux-clang-debug",
            "description": "clang linux debug configuration",
            "inherits": "Debug",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "linux-clang-release",
            "description": "clang linux release configuration",
            "inherits": "Release",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "linux-gcc-debug",
            "description": "gcc linux debug configuration",
            "inherits": "Debug",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "linux-gcc-release",
            "description": "gcc linux release configuration",
            "inherits": "Release",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "windows-clang-debug",
            "description": "clang windows debug configuration",
            "inherits": "Debug",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-clang-x64"
                }
            }
        },
        {
            "name": "windows-clang-release",
            "description": "clang windows release configuration",
            "inherits": "Release",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-clang-x64"
                }
            }
        },
        {
            "name": "windows-msvc-debug",
            "description": "msvc windows debug configuration",
            "inherits": "Debug",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "windows-msvc-release",
            "description": "msvc windows release configuration",
            "inherits": "Debug",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "default-debug",
            "description": "Default debug configuration",
            "inherits": "Debug"
        },
        {
            "name": "default-release",
            "description": "Default release configuration",
            "inherits": "Release"
        }
    ]
}







